{
	"name": "Productiwitty",
	"version": "0.1",
	"description": "The extension throws a popup every 15 minutes and reminds you to stay productive. It can easily be switched on and off with a simple click.",

	"manifest_version": 2,
	"author": "Piyush Khemka",
	"icons": { "16": "images/green.png",
				"off": "images/red.png",
				"on": "images/green.png"

	},
	"permissions": [ "notifications",
					 "tabs",
					 "alarms"
		],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts" : [
    {
        "matches" : [ "<all_urls>"],
        "js": ["hello.js"],
        "css": [ "hello.css" ]
    }
],


	"browser_action": {
		"default_icon": "images/green.png",
		"default_title": "Toggle Productiwitty",
		"default_popup": "popup.html"
	}
}